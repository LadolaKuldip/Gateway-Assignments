@model Entities.Employee

@{
    ViewData["Title"] = "Create";
}

<div class="modal-content">
    <div class="form-horizontal">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card-body">
                <h5 class="card-title">
                    Employee Form
                    <span class="close" id="close">&times;</span>
                </h5>
                <hr />
                <div class="form-group row">
                    <label asp-for="Name" class="control-label col-md-3 m-t-15"></label>
                    <div class="col-md-9">
                        <input asp-for="Name" class="form-control" type="text" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Salary" class="control-label col-md-3 m-t-15"></label>
                    <div class="col-md-9">
                        <input asp-for="Salary" class="form-control" type="number" required />
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IsManager" class="control-label col-md-3 m-t-15"></label>
                    <div class="col-md-9">
                        <div class="checkbox">
                            <input class="custom-checkbox" asp-for="IsManager" id="IsManager" />
                        </div>
                    </div>
                </div>
               
                <div class="form-group row" id="managers">
                    <label asp-for="Manager" class="control-label col-md-3 m-t-15"></label>
                    <div class="col-md-9">
                        <select asp-for="Manager" class="form-control" asp-items="ViewBag.Manager" id="managerId"></select>
                        
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Phone" class="control-label col-md-3 m-t-15"></label>
                    <div class="col-md-9">
                        <input asp-for="Phone" class="form-control" type="tel" pattern="[1-9]{1}[0-9]{9}" required />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Email" class="control-label col-md-3 m-t-15"></label>
                    <div class="col-md-9">
                        <input asp-for="Email" class="form-control" type="email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="DepartmentId" class="control-label col-md-3 m-t-15"></label>
                    <div class="col-md-9">
                        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId" required></select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="border-top">
                <div class="card-body" align="center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#IsManager').click(function () {
            if ($(this).is(":checked")) {
                $('#managers').css("display", "none");
                $('#managerId').val(0);
            }
            else {
                $('#managers').css("display", "");
            }
        });
    });
</script>


