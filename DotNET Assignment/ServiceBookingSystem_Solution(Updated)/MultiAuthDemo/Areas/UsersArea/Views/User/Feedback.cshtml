@model ASC.Common.ServiceBookingEditModel

<div class="modal-content col-6">
    <div class="form-horizontal">
        @using (Html.BeginForm("Feedback", "USER", FormMethod.Post))
        {
@Html.AntiForgeryToken()

                <div class="card-body">
                    <h5 class="card-title">
                        Any Feedback
                        <span class="close" id="close">&times;</span>
                    </h5>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ServiceBooking.Id)
                    <br>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.ServiceBooking.Feedback, htmlAttributes: new { @class = "control-label col-md-3 m-t-15" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.ServiceBooking.Feedback, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ServiceBooking.Feedback, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="border-top">
                    <div class="card-body" align="center">
                        <button type="Submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            }
    </div>
</div>