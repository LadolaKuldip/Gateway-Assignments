@model ASC.Common.ServiceBookingDetailModel

@{
    ViewBag.Title = "Details";
}
<link href="~/Template/css/Appointment-Progressbar.css" rel="stylesheet" />

<div class="modal-content">
    <div class="form-horizontal">
        <div class="card-body">

            <span class="close" id="close">&times;</span>

            <div class="container-fluid">
                <h3 class=" ">Service Booking</h3>

                <div class="form-horizontal">

                    <div class=" " style="padding-top:20px;">
                        <div class="card">

                            <div class="row d-flex justify-content-center">
                                <div class="col-12">
                                    <ul id="progressbar" class="text-center">
                                        @if (Model.ServiceBooking.Status.Equals("Pending"))
                                        {
                                            <li class="active step0"> </li>
                                            <li class="step0"> </li>
                                            <li class="step0"></li>
                                            <li class="step0"></li>
                                        }
                                        else if (Model.ServiceBooking.Status.Equals("Approved"))
                                        {
                                            <li class="active step0"> </li>
                                            <li class="active step0"> </li>
                                            <li class="step0"></li>
                                            <li class="step0"></li>
                                        }
                                        else if (Model.ServiceBooking.Status.Equals("Process"))
                                        {
                                            <li class="active step0"> </li>
                                            <li class="active step0"> </li>
                                            <li class="active step0"></li>
                                            <li class="step0"></li>
                                        }
                                        else
                                        {
                                            <li class="active step0"> </li>
                                            <li class="active step0"> </li>
                                            <li class="active step0"></li>
                                            <li class="active step0"></li>
                                        }
                                    </ul>
                                </div>
                            </div>

                            <div class="row justify-content-between top">
                                <div class=" d-flex icon-content">
                                    <p class="font-weight-bold">Created</p>
                                </div>
                                <div class="row d-flex icon-content">
                                    <p class="font-weight-bold">Approved</p>
                                </div>
                                <div class="row d-flex icon-content">
                                    <p class="font-weight-bold">Processing</p>
                                </div>
                                <div class="row d-flex icon-content">
                                    <p class="font-weight-bold">Completed</p>
                                </div>
                            </div>
                        </div>
                    </div>


                    <hr />

                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active">
                            Booking Details
                        </li>
                    </ol>

                    <div class="card-body" style="padding-top:0px;padding-bottom:0px;">
                        <div class="table-responsive">
                            <table class="table" width="100%" cellspacing="0">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ServiceBooking.BookingDate)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.ServiceBooking.BookingDate)
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ServiceBooking.ReturnDate)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.ServiceBooking.ReturnDate)
                                    </td>
                                </tr>
                                <tr style="border-bottom:1px solid #dee2e6;">
                                    <th>
                                        @Html.DisplayNameFor(model => model.ServiceBooking.PickupAddress)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.ServiceBooking.PickupAddress)
                                    </td>
                                </tr>
                                <tr style="border-bottom:1px solid #dee2e6;">
                                    <th>
                                        @Html.DisplayNameFor(model => model.ServiceBooking.DropAddress)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.ServiceBooking.DropAddress)
                                    </td>
                                </tr>
                                <tr style="border-bottom:1px solid #dee2e6;">
                                    <th>
                                        @Html.DisplayNameFor(model => model.ServiceBooking.Dealer.Name)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.ServiceBooking.Dealer.Name)
                                    </td>
                                </tr>
                                <tr style="border-bottom:1px solid #dee2e6;">
                                    <th>
                                        @Html.DisplayNameFor(model => model.ServiceBooking.Dealer.PhoneNumber)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.ServiceBooking.Dealer.PhoneNumber)
                                    </td>
                                </tr>
                            </table>
                        </div>

                    </div>


                    <div class="row">

                        <div class="col-md-6">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item active">
                                    Customer Details
                                </li>
                            </ol>

                            <div class="card-body" style="padding-top:0px;padding-bottom:0px;">
                                <div class="table-responsive">
                                    <table class="table" width="100%" cellspacing="0">
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ServiceBooking.Vehicle.Customer.Name)
                                            </th>
                                            <td>
                                                @Html.DisplayFor(model => model.ServiceBooking.Vehicle.Customer.Name)
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ServiceBooking.Vehicle.Customer.PhoneNumber)
                                            </th>
                                            <td>
                                                @Html.DisplayFor(model => model.ServiceBooking.Vehicle.Customer.PhoneNumber)
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ServiceBooking.Vehicle.Customer.Email)
                                            </th>
                                            <td>
                                                @Html.DisplayFor(model => model.ServiceBooking.Vehicle.Customer.Email)
                                            </td>
                                        </tr>
                                        <tr style="border-bottom:1px solid #dee2e6;">
                                            <th>
                                                @Html.DisplayNameFor(model => model.ServiceBooking.Vehicle.Customer.Address)
                                            </th>
                                            <td>
                                                @Html.DisplayFor(model => model.ServiceBooking.Vehicle.Customer.Address)
                                            </td>
                                        </tr>
                                    </table>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item active">
                                    Vehicles Details
                                </li>
                            </ol>

                            <div class="card-body" style="padding-top:0px;padding-bottom:0px;">
                                <div class="table-responsive">
                                    <table class="table" width="100%" cellspacing="0">
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ServiceBooking.Vehicle.NumberPlate)
                                            </th>
                                            <td>
                                                @Html.DisplayFor(model => model.ServiceBooking.Vehicle.NumberPlate)
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ServiceBooking.Vehicle.RegistrationDate)
                                            </th>
                                            <td>
                                                @Html.DisplayFor(model => model.ServiceBooking.Vehicle.RegistrationDate)
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ServiceBooking.Vehicle.RegistrationDate)
                                            </th>
                                            <td>
                                                @Html.DisplayFor(model => model.ServiceBooking.Vehicle.RegistrationDate)
                                            </td>
                                        </tr>
                                        <tr style="border-bottom:1px solid #dee2e6;">
                                            <th>
                                                @Html.DisplayNameFor(model => model.ServiceBooking.Vehicle.FuelType)
                                            </th>
                                            <td>
                                                @Html.DisplayFor(model => model.ServiceBooking.Vehicle.FuelType)
                                            </td>
                                        </tr>

                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>

                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active">
                            Services Details
                        </li>
                    </ol>

                    <div class="card-body" style="padding-top:0px;padding-bottom:0px;">
                        <div class="table-responsive">
                            <table class="table" width="100%" cellspacing="0">
                                <tr>

                                    <th>
                                        Service Name
                                    </th>
                                    <th>
                                        Service Type
                                    </th>
                                    <th>
                                        Service Duration
                                    </th>
                                    <th>
                                        Amount
                                    </th>
                                </tr>
                                @foreach (var item in Model.Services)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Type)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Duration)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Amount) <b>&#8377;</b>
                                        </td>
                                    </tr>
                                }

                                <tr style="border-bottom:1px solid #dee2e6;">
                                    <td>
                                    </td>
                                    <td>
                                    </td>
                                    <td align="right">
                                        <b> TOTAL :</b>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.ServiceBooking.TotalAmmount) <b>&#8377;</b>
                                    </td>
                                </tr>


                            </table>
                        </div>

                    </div>

                    
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active">
                                Payment Details
                            </li>
                        </ol>

                        <div class="card-body" style="padding-top:0px;padding-bottom:0px;">
                            <div class="table-responsive">
                                <table class="table" width="100%" cellspacing="0">
                                    <tr>

                                        <th>
                                            Method
                                        </th>
                                        <th>
                                            Pay Id
                                        </th>
                                    </tr>
                                    @if (Model.ServiceBooking.PayDone == true)
                                    {
                                        <tr style="border-bottom:1px solid #dee2e6;">

                                            <td>
                                                @Html.DisplayFor(model => model.ServiceBooking.PayMethod)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.ServiceBooking.PayId)
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr style="border-bottom:1px solid #dee2e6;">
                                            <td><b style="color:red;">Payment pending</b></td><td></td>
                                        </tr>
                                    }

                                </table>
                            </div>

                        </div>
                    

                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active">
                            Customer Feedback
                        </li>
                    </ol>

                    <div class="card-body" style="padding-top:0px;padding-bottom:0px;">
                        <div class="table-responsive">
                            <table class="table" width="100%" cellspacing="0">
                                <tr style="border-bottom:1px solid #dee2e6;">

                                    @if (Model.ServiceBooking.Feedback != null)
                                    {
                                        <th>
                                            @Html.DisplayFor(model => model.ServiceBooking.Feedback)
                                        </th>
                                    }
                                    else
                                    {
                                        <th style="color:red;">
                                            No Feedback !!!!!!!
                                        </th>
                                    }

                                </tr>
                            </table>
                        </div>
                    </div>


                    <hr />

                </div>
            </div>


        </div>
    </div>
</div>


