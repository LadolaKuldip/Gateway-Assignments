@model ASC.Common.ModelFormViewModel

<div class="modal-content">
    <div class="form-horizontal">
        @using (Html.BeginForm("Edit", "Model", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

        <div class="card-body">
            <h5 class="card-title">
                Edit Model
                <span class="close" id="close">&times;</span>
            </h5>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.modelData.Id)
            <br>
            <div class="form-group row">
                @Html.LabelFor(model => model.modelData.Name, htmlAttributes: new { @class = "control-label col-md-3 m-t-15" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.modelData.Name, new { htmlAttributes = new { @class = "form-control", required = "required", @type = "text" } })
                    @Html.ValidationMessageFor(model => model.modelData.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.modelData.BrandId, htmlAttributes: new { @class = "control-label col-md-3 m-t-15" })
                <div class="col-md-8">
                    @Html.DropDownListFor(model => model.modelData.BrandId, new SelectList(Model.brands, "Id", "Name"), "Select", new {id = "myDropDownlistID", @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.modelData.BrandId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.modelData.IsActive, htmlAttributes: new { @class = "control-label col-md-3 m-t-15" })

                <div class="col-md-9">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.modelData.IsActive)
                        @Html.ValidationMessageFor(model => model.modelData.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

            <div class="border-top">
                <div class="card-body" align="center">
                    <button type="Submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        }
    </div>
</div>

<script>
    $(document).ready(function () { $("#myDropDownlistID").select2(); });
</script>