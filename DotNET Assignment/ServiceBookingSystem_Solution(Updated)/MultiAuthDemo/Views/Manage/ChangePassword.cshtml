@model MultiAuthDemo.Models.ChangePasswordViewModel
@{ ViewBag.Title = "Change Password";

                if (User.IsInRole("Customer"))
                {
                    Layout = "~/Areas/UsersArea/Views/Shared/_UserLayoutPage.cshtml";
                }
                else if (User.IsInRole("Dealer"))
                {
                    Layout = "~/Areas/DealersArea/Views/Shared/_DealerLayoutPage.cshtml";
                }
                else if (User.IsInRole("Admin"))
                {
                    Layout = "~/Areas/AdminsArea/Views/Shared/_AdminLayoutPage.cshtml";
                } }

<div class="container-fluid">
    <h1 class="mt-4">Manage Account</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">
            Change Password
        </li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">               
                    
                    <div class="col-6 form-horizontal">
                        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()                            
                            
                            <div class="form-group row">
                                @Html.LabelFor(m => m.OldPassword, new { @class = "control-label col-md-3 m-t-15" })
                                <div class="col-md-9">
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(m => m.NewPassword, new { @class = "control-label col-md-3 m-t-15" })
                                <div class="col-md-9">
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-md-3 m-t-15" })
                                <div class="col-md-9">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                             <div class="border-top">
                                <div class="card-body" align="center">
                                    <input type="submit" value="Change password" class="btn btn-primary" />
                                </div>
                            </div>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            }
                     </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}