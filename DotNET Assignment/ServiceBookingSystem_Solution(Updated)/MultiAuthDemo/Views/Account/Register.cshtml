@model MultiAuthDemo.Models.RegisterViewModel
@{ ViewBag.Title = "Register"; }


<link href="~/Template/css/LoginSignUp.css" rel="stylesheet" />

<h2 style="color:ffffff;font-size:50px;">Automobile Service Center Planner</h2>

<div class="container right-panel-active" id="container">
    <div class="form-container sign-up-container">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "", role = "form" }))
        {
            @Html.AntiForgeryToken()


            <h1>Create Account</h1>
            <div class="social-container"></div>
            @Html.TextBoxFor(m => m.Email, new { @class = "", placeholder = "Email" })
            @Html.TextBoxFor(m => m.UserName, new { @class = "", placeholder = "User Name" })
            @Html.PasswordFor(m => m.Password, new { @class = "", placeholder = "Password" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "", placeholder = "ConfirmPassword" })
            @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, "Select Type", new { style = "background-color: #eee;border: none;padding: 12px 15px;margin: 8px 0;width: 100%;" })
            <br />
            <button type="submit">Sign Up</button>
        }
    </div>

    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Welcome Back!</h1>
                <p>To keep connected with us please login with your personal info</p>
                <a href="@Url.Action("Login", "Account")"><button class="ghost" id="signIn">Sign In</button></a>
            </div>

        </div>
    </div>
</div>
@Html.ValidationSummary("", new { @class = "container", style = "display: block;font-size: 1.2em;font-weight: bold;background-color: #eee;color:red;min-height:0px;margin-top:10px;" })


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
