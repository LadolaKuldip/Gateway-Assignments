@using MultiAuthDemo.Models
@model LoginViewModel
@{ ViewBag.Title = "Log in"; }

<link href="~/Template/css/LoginSignUp.css" rel="stylesheet" />

<h2 style="color:ffffff;font-size:50px;">Automobile Service Center Planner</h2>
<div class="container" id="container">

    <div class="form-container sign-in-container">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <h1>Log In</h1>
            <div class="social-container">

            </div>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Enter UserName" })

            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter Password" })

            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
            <br />
            <button type="submit">Sign In</button>

        }
    </div>
    <div class="overlay-container">
        <div class="overlay">

            <div class="overlay-panel overlay-right">
                <h1>Hello</h1>
                <p>Enter your details and start journey with us</p>
                <a href="@Url.Action("Register", "Account")"><button class="ghost" id="signUp">Sign Up</button></a>

            </div>
        </div>
    </div>
</div>
@Html.ValidationSummary("", new { @class = "container", style = "display: block;font-size: 1.2em;font-weight: bold;background-color: #eee;color:red;min-height:0px;margin-top:10px;" })


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



















